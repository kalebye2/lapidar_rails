<% if atendimento.profissional == usuario_atual.profissional || usuario_atual.secretaria? %>
  <% if AtendimentoLocal.count == 0 %>
    <span class="icon-location"><%= atendimento.local %></span>
  <% else %>
    <div class="field">
      <label for="atendimento[atendimento_local_id]">Local</label>
      <%== hx_select patch: atendimento_path(atendimento,  authenticity_token: form_authenticity_token.to_s, no_redirect: true), options: AtendimentoLocal.all.map { |local| ["#{local.descricao} (#{local.tipo})", local.id] }, blank: true, name: "atendimento[atendimento_local_id]", value: atendimento.atendimento_local_id %>
    </div>
  <% end %>
<% else %>
  <span class="icon-location"><%= atendimento.local %></span>
<% end %>
