<tr>
  <th colspan=2>Identificação</th>
</tr>


<tr>
  <th width="10%">Profissional</th>
  <td><%= laudo.profissional.descricao_completa %></td>
</tr>

<tr>
  <th>Nome do paciente</th>
  <td><%= laudo.paciente.nome_completo %></td>
</tr>

<tr>
  <th>Sexo</th>
  <td><%= laudo.paciente.render_sexo %></td>
</tr>

<tr>
  <th>Data de início</th>
  <td><%= render_data_brasil laudo.data_inicial %></td>
</tr>

<tr id="laudo-avaliacao-data-final">
  <%= render "laudos/tabela-identificacao/laudo-avaliacao-data-final", laudo: laudo %>
</tr>

<tr>
  <th>Dias de avaliação</th>
  <td><%= laudo.dias_de_avaliacao %></td>
</tr>

<tr>
  <th>Idade na avaliação</th>
  <td><%= laudo.paciente.render_idade(laudo.data_avaliacao) %></td>
</tr>

<tr>
  <th>Interessado</th>
  <td><%= render "laudos/tabela-identificacao/laudo-interessado", laudo: laudo %></td>
</tr>

<tr>
  <th>Finalidade da avaliação</th>
  <td>
    <%= render "laudos/tabela-identificacao/laudo-finalidade", laudo: laudo %>
  </td>
</tr>

<tr>
  <th>Sessões</th>
  <td><%= laudo.numero_de_sessoes %></td>
</tr>

<tr>
  <th>Demanda</th>
  <td id="laudo-demanda"><%= render "laudos/tabela-identificacao/laudo-demanda", laudo: laudo %></td>
</tr>

<tr>
  <th>Instrumentos usados</th>
  <td>
    <ul>
    <% laudo.acompanhamento.instrumentos_aplicados.map(&:nome).each do |i| %>
      <li><%= i %></li>
    <% end %>
    </ul>
  </td>
</tr>
