<div id="acompanhamento_reajustes">
  <div class="pessoas-container">
    <% @acompanhamento_reajustes.each do |acompanhamento_reajuste| %>
      <%= render "card", acompanhamento_reajuste: acompanhamento_reajuste %>
    <% end %>
  </div>

  <div id="replace" style="margin:auto;text-align:center;">
    <% if @pagy %>
      <% if @pagy.page < @pagy.pages %>
        <button <%= hx_set get: acompanhamento_reajustes_path(@params.merge(page: @pagy.page + 1)), target: "#replace", swap: "outerHTML" %>>
          Carregar mais
        </button>
      <% end %>
    <% end %>
  </div>

  <% if hx_request? %>
    <span id="num_reajustes" hx-swap-oob="true"><%= @contagem %></span>
  <% end %>
</div>
