<% url_previous = calendar.view_context.url_for(action: :update_calendario_atendimentos_semana, controller: :application, start_date: (calendar.date_range.first - calendar.date_range.count.days).iso8601) %>
<% url_next = calendar.view_context.url_for(action: :update_calendario_atendimentos_semana, controller: :application, start_date: (calendar.date_range.last + 1.day).iso8601) %>
<div class="simple-calendar">
  <div class="calendar-heading">
    <button hx-get="<%= url_previous %>"
            hx-target="#calendario-atendimentos-semana"
            hx-swap="outerHTML">
            <%= t('simple_calendar.previous', default: 'Anterior') %>
    </button>
    <% if calendar.number_of_weeks == 1 %>
      <span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
    <% else %>
      <span class="calendar-title"><%= t('simple_calendar.week', default: 'Semana') %> <%= calendar.week_number %> - <%= calendar.end_week %></span>
    <% end %>
    <button hx-get="<%= url_next %>"
            hx-target="#calendario-atendimentos-semana">
      <%= t('simple_calendar.next', default: 'PrÃ³ximo') %>
    </button>
  </div>
  <button
    hx-get="/update_calendario_atendimentos_semana?start_date=<%= calendar.date_range.first.iso8601 %>"
    hx-target="#calendario-atendimentos-semana"
    hx-swap="outerHTML"
    class="">
    Recarregar semana
  </button>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
