<% titulo "Recebimentos de #{@pessoa.nome_abreviado}" %>

<%= link_to "Voltar", @pessoa %>
<h1>Recebimentos de acompanhamentos</h1>

<table>
  <caption>Informações do cadastro</caption>
  <thead>
    <tr>
      <th>Nome</th>
      <td><%= @pessoa.nome_completo %></td>
    </tr>
    <tr>
      <th>CPF</th>
      <td><%= @pessoa.render_cpf %></td>
    </tr>
    <tr>
<th>Data de nascimento</th>
<td><%= render_data_brasil @pessoa.data_nascimento %> (<%= @pessoa.render_idade %>)</td>
    </tr>
    <tr>
      <th>E-mail principal</th>
      <td><%= mail_to @pessoa.email %></td>
    </tr>
    <tr>
      <th>Telefone principal</th>
      <td>
        <%= phone_to @pessoa.render_fone_link, @pessoa.render_fone %>
        <br>
        <%= link_to "Whatsapp", "https://wa.me/#{@pessoa.render_fone_link[1..]}", target: :blank %>
        |
        <%= link_to "Telegram", "https://t.me/#{@pessoa.render_fone_link}", target: :blank %>
      </td>
    </tr>
    <tr>
      <th>Endereço</th>
      <td>
        <%= @pessoa.render_endereco %>
        |
        <%= @pessoa.estado %>,
        <%= @pessoa.pais.nome %>
      </td>
    </tr>
  </thead>
</table>

<table class="tabela-recebimentos" id="tabela-recebimentos">
  <caption>Recebimentos</caption>
  <thead>
    <tr>
      <th>Beneficiário</th>
      <th>Pagante</th>
      <th>Data</th>
      <th>Valor</th>
      <th>Forma de pagamento</th>
      <th>Profissional</th>
      <th>Tipo de serviço</th>
      <th>Ações</th>
    </tr>
  </thead>
<% @pessoa.recebimentos.each do |recebimento| %>
  <%= render "recebimentos/tabela-item", recebimento: recebimento %>
<% end %>
</table>
