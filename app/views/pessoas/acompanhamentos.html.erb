<% titulo "#{@pessoa.nome_abreviado} - Acompanhamentos" %>

<h1>Acompanhamentos de <%= link_to @pessoa.nome_abreviado, @pessoa %></h1>

<%= render 'navbar', pessoa: @pessoa %>

<div class="grid-3" id="acompanhamentos-container">
  <% @pessoa.acompanhamentos.each do |acompanhamento| %>
    <%= render "acompanhamentos/card", acompanhamento: acompanhamento %>
  <% end %>
  <%= link_to new_acompanhamento_pessoa_path(@pessoa), class: "card", style: "display:grid;align-content:center;" do %>
    <div>
      <h2 style="text-align:center;">Adicionar acompanhamento</h2>
    </div>
  <% end %>
</div>
