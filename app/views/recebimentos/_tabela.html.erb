<table class="tabela-recebimentos" id="tabela-recebimentos">
  <caption>Recebimentos - <%= render_data_brasil @de %> a <%= render_data_brasil @ate %></caption>
  <thead>
    <tr>
      <th>Beneficiário</th>
      <th>Pagante</th>
      <th>Data</th>
      <th>Valor</th>
      <th>Modalidade de pgto</th>
      <th>Profissional</th>
      <th>Serviço</th>
      <th>Link</th>
    </tr>
    <% if usuario_atual.financeiro? %>
      <tr id="recebimento-adicionar" style="font-size:.85em;">
        <%= render "recebimentos/table-adicionar" %>
      </tr>
    <% end %>
  </thead>
  <tbody>
    <% recebimentos.each do |recebimento| %>
      <%= render 'recebimentos/tabela-item', recebimento: recebimento %>
    <% end %>
  </tbody>
</table>
